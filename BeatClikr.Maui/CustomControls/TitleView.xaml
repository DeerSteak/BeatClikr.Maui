<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="BeatClikr.Maui.CustomControls.TitleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        Margin="0"
        ColumnDefinitions="Auto, Auto"
        HorizontalOptions="Center"
        RowDefinitions="40"
        VerticalOptions="Center">
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Aspect="AspectFit"
            HeightRequest="40"
            HorizontalOptions="Start"
            Source="titleicon"
            VerticalOptions="Center"
            WidthRequest="40" />
        <Label
            x:Name="TitleLabel"
            Grid.Row="0"
            Grid.Column="1"
            FontAttributes="Bold"
            FontSize="Medium"
            VerticalOptions="Center"
            HorizontalOptions="Start" />
    </Grid>
</ContentView>

